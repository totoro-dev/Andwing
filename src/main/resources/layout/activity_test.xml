<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
        id="linear_layout"
        background="#ffffff"
        width="match_parent"
        height="match_parent"
        orientation="horizontal">
    <RecyclerView
            id="rv1"
            background="#ababab"
            width="match_parent"
            height="match_parent"/>
    <TextView
            id="tv1"
            text="文本框测试！"
            textColor="#ff0000"
            opaque="true"
            background="#ebebeb"
            width="match_parent"
            height="match_parent">
    </TextView>

    <Spinner
            width="200"
            height="30"
            array="1,2"
            enterColor="#dbdbdb"
            selectedColor="#15a5e5"
            text="下拉框"/>

    <LinearLayout
            id="linear_layout_2"
            background="#00ff00"
            width="match_parent"
            height="match_parent"
            orientation="vertical">
        <LinearLayout
                id="linear_layout_3"
                background="#00ff00"
                width="match_parent"
                height="wrap_content"
                orientation="horizontal">
            <ImageView
                    id="iv1"
                    width="50"
                    height="50"
                    src="img/link.png"/>
            <TextView
                    id="tv_2"
                    opaque="false"
                    text="ImageView测试"
                    width="wrap_content"
                    height="match_parent"/>
        </LinearLayout>
        <Button
                id="btn1"
                text="按钮测试"
                background="#15a5e5"
                textColor="#ffffff"
                textSize="20"
                width="wrap_content"
                height="wrap_content"/>
        <EditText
                id="et1"
                background="#ffffff"
                width="match_parent"
                height="wrap_content"
                hintText="请输入"
                text="输入框测试1"/>
        <EditText
                id="et2"
                background="#ffffff"
                width="match_parent"
                height="wrap_content"
                hintText="请输入"
                text="输入框测试2"/>
    </LinearLayout>
</LinearLayout>